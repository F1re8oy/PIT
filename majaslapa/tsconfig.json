{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    }
  ],
    "compilerOptions": {
      "allowJs": true,
      "checkJs": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "module": "ESNext",
      "target": "ESNext",
      "strict": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.js"]
}
